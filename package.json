{
  "name": "fountainer",
  "displayName": "Fountainer",
  "version": "1.0.3",
  "description": "Convert screenplays written using the Fountain syntax into HTML files",
  "main": "index.js",
  "bin": {
    "fountainer": "index.js"
  },
  "scripts": {
    "sample": "node index.js -i sample.theBigFish.fountain -o dist/index.html && npm run serve",
    "serve": "php -S localhost:9000 -t dist",
    "testone": "NODE_ENV=test nyc --reporter=html --reporter=text ava",
    "test": "npm run testone 'test/**/*.spec.js'"
  },
  "keywords": [
    "fountain",
    "screenplay",
    "script",
    "movie",
    "writing"
  ],
  "author": "ganeshnrao@me.com",
  "license": "ISC",
  "devDependencies": {
    "ava": "^3.15.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-prettier": "^3.4.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "fs-extra": "^9.1.0",
    "html-minifier": "^4.0.0",
    "lodash": "^4.17.21",
    "sass": "^1.32.11",
    "yargs": "^16.2.0"
  }
}
